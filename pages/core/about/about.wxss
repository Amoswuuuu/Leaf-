.aboutTop {
  height: 240rpx;
  background: linear-gradient(45deg, #36d1dc, #5b86e5);
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
  font-size: 24rpx;
  letter-spacing: 5rpx;
}

.icon {
  padding: 20rpx;
}

.aboutTopTitle {
  font-size: 36rpx;
  letter-spacing: 10rpx;
}

.aboutBox {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.ab_t{
  color: #5b86e5;
}

.aboutBox text {
  display: flex;
  flex-direction: column;
  padding: 15rpx;
  line-height: 150%;
  justify-content: space-between;
  font-size: 28rpx;
}
