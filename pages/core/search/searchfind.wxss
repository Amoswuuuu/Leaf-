/*searchfind.wxss*/

.zan {
  float: right;
  margin-top: -22px;
  margin-right: 20px;
}

.top {
  position: fixed;
  top: -20rpx;
}

.block {
  height: 80rpx;
}

.line {
  width: 700rpx;
  height: 20rpx;
}

.infoBox {
  background-color: white;
  width: 700rpx;
  height: 300rpx;
  align-items: left;
  margin: 20rpx 25rpx;
  display: flex;
  flex-flow: column;
  border-radius: 10rpx;
}

.infoBox image {
  width: 38rpx;
  height: 38rpx;
}

.infoBox text {
  width: 180rpx;
  font-weight: 200;
}

.tag {
  margin-left: 280rpx;
  color: white;
  border-radius: 5rpx;
}

.tag text {
  padding: 0 10rpx 0 10rpx;
}

.row2 {
  align-content: space-around;
  padding: 20rpx 0 0 40rpx;
  height: 120rpx;
  width: 750rpx;
}

.infoContent {
  font-size: 28rpx;
  font-weight: 500;
  /* 控制宽度 */
  width: 590rpx;
  max-width: 590rpx;
  /* 控制显示的行数 */
  max-height: 150rpx;
  line-height: 50rpx;
  /* 显示多行 */
  display: -webkit-box;
  overflow: hidden;
  /* 1为显示的行数 */
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

#infoContent1 {
  font-size: 36rpx;
  font-weight: 500;
  /* 控制宽度 */
  width: 590rpx;
  max-width: 590rpx;
  /* 控制显示的行数 */
  max-height: 100rpx;
  line-height: 50rpx;
  /* 显示多行 */
  display: -webkit-box;
  overflow: hidden;
  /* 2为显示的行数 */
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.row1 {
  display: flex;
  flex-direction: row;
  padding: 20rpx 0 0 40rpx;
  font-size: 28rpx;
}

#idText {
  width: 300rpx;
  min-width: 200rpx;
  max-width: 300rpx;
}

.row3 {
  padding: 20rpx 0 20rpx 40rpx;
  font-size: 28rpx;
}

.row3 image {
  padding-left: 240rpx;
}

#like {
  padding-left: 50rpx;
}

.img {
  width: 38rpx;
  height: 38rpx;
}
