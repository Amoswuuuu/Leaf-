/*find.wxss*/

.zan {
  float: right;
  margin-top: -22px;
  margin-right: 20px;
}

.top {
  position: fixed;
  top: -20rpx;
}

.navBar {
  position: fixed;
  top: 78rpx;
  background-color: #fff;
  padding-bottom: 20rpx;
}

.filter {
  position: fixed;
  z-index: 10;
  width: 100%;
  height: 160rpx;
  padding-left: 25rpx;
  white-space: nowrap;
  background: -webkit-gradient(linear, left top, left bottom, from(rgba(255, 255, 255, 1)), color-stop(0.93, rgba(255, 255, 255, 0.93)), to(rgba(255, 255, 255, 0)));
}

.filter-item {
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx 0 20rpx 20rpx;
  border-radius: 5rpx;
  box-shadow: 1px 2px 3px #e5e5e5;
  opacity: 0.66;
}

.filter-item#all {
  margin-left: 20rpx;
}

.filter-item.active {
  opacity: 1;
  transform: scale(1.08, 1.08);
  box-shadow: 1px 2px 3px #ddd;
}

.block {
  height: 240rpx;
}

.line {
  width: 700rpx;
  height: 20rpx;
}

.infoBox {
  background-color: white;
  width: 700rpx;
  height: 300rpx;
  align-items: left;
  margin: 20rpx 0 20rpx 25rpx;
  display: flex;
  flex-flow: column;
  border-radius: 10rpx;
}

.infoBox image {
  width: 38rpx;
  height: 38rpx;
}

.infoBox text {
  width: 180rpx;
  font-weight: 200;
}

.tag {
  margin-left: 280rpx;
  color: white;
  border-radius: 5rpx;
}

.tag text {
  padding: 0 10rpx 0 10rpx;
}

.row2 {
  align-content: space-around;
  padding: 20rpx 0 0 40rpx;
  height: 120rpx;
  width: 750rpx;
}

.infoContent {
  font-size: 28rpx;
  font-weight: 500;
  /* 控制宽度 */
  width: 590rpx;
  max-width: 590rpx;
  /* 控制显示的行数 */
  max-height: 150rpx;
  line-height: 50rpx;
  /* 显示多行 */
  display: -webkit-box;
  overflow: hidden;
  /* 1为显示的行数 */
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

#infoContent1 {
  font-size: 36rpx;
  font-weight: 500;
  /* 控制宽度 */
  width: 590rpx;
  max-width: 590rpx;
  /* 控制显示的行数 */
  max-height: 100rpx;
  line-height: 50rpx;
  /* 显示多行 */
  display: -webkit-box;
  overflow: hidden;
  /* 2为显示的行数 */
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.row1 {
  display: flex;
  flex-direction: row;
  padding: 20rpx 0 0 40rpx;
  font-size: 28rpx;
}

#idText {
  width: 300rpx;
  min-width: 200rpx;
  max-width: 300rpx;
}

.row3 {
  padding: 20rpx 0 20rpx 40rpx;
  font-size: 28rpx;
}

.row3 image {
  padding-left: 240rpx;
}

#like {
  padding-left: 50rpx;
}

.img {
